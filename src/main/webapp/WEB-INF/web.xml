<?xml version="1.0" encoding="UTF-8"?>

<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="WebApp_ID"
    version="3.0"
>

    <display-name>forum</display-name>

    <resource-ref>
        <description>Forum Database JNDI Reference</description>
        <res-ref-name>jdbc/forum</res-ref-name>
        <res-type>javax.jdbc.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/WEB-INF/views/home.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home.html</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.html</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/category_new.html</url-pattern>
            <url-pattern>/category_edit.html</url-pattern>
            <url-pattern>/category_delete.html</url-pattern>
            <url-pattern>/user_new.html</url-pattern>
            <url-pattern>/user_edit.html</url-pattern>
            <url-pattern>/user_delete.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>FORUM_ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>User Pages</web-resource-name>
            <url-pattern>/categories.html</url-pattern>
            <url-pattern>/users.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>FORUM_USER</role-name>
            <role-name>FORUM_ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Forum Administration</realm-name>
    </login-config>

    <security-role>
        <role-name>FORUM_ADMIN</role-name>
    </security-role>

    <security-role>
        <role-name>FORUM_USER</role-name>
    </security-role>

</web-app>